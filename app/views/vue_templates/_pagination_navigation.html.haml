.text-xs-center
  %nav{"aria-label" => "Page navigation"}
    %ul.pagination
      %li.page-item{'v-bind:class': '{disabled: currentPage <= 1}'}
        %a.page-link{"aria-label" => "Previous", :href => "#", '@click': 'currentPage--'}
          %span{"aria-hidden" => "true"} &laquo;
          %span.sr-only Previous
      %li.page-item{'v-for': 'n in totalPages', 'v-bind:class': '{active: currentPage == (n + 1)}'}
        %a.page-link{:href => "#", '@click': 'currentPage = n + 1'} {{n + 1}}
      %li.page-item{'v-bind:class': '{disabled: currentPage >= totalPages}'}
        %a.page-link{"aria-label" => "Next", :href => "#", '@click': 'currentPage++'}
          %span{"aria-hidden" => "true"} &raquo;
          %span.sr-only Next